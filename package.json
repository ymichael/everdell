{
  "name": "everdell",
  "version": "0.1.0",
  "engines": {
    "node": "12.x"
  },
  "private": true,
  "scripts": {
    "test": "DB_PATH=./db.test.sqlite mocha -r ts-node/register src/**/*.test.ts",
    "test:watch": "DB_PATH=./db.test.sqlite mocha -r ts-node/register --watch --extension ts src/**/*.test.ts",
    "dev": "DB_PATH=./db/game.sqlite next dev",
    "build": "next build",
    "start": "DB_PATH=./db/game.sqlite next start -p $PORT",
    "format": "prettier --write src",
    "lint": "eslint src --ext .ts,ts"
  },
  "dependencies": {
    "expect.js": "^0.3.1",
    "formik": "^2.2.6",
    "lodash": "^4.17.20",
    "mocha": "^8.2.1",
    "next": "10.0.4",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "short-uuid": "^4.1.0",
    "sqlite3": "^5.0.0",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/lodash": "^4.14.166",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "prettier": "2.2.1",
    "typescript": "^4.1.3"
  }
}
